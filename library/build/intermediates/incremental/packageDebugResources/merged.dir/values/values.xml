<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">@android:color/background_dark</color>
    <color name="current_day_of_month">@android:color/holo_blue_light</color>
    <color name="day_disabled_background_color">#F1F5F8</color>
    <color name="day_disabled_text_color">#e7e6e6</color>
    <color name="gray">#9e9999</color>
    <color name="orange">#fd5739</color>
    <color name="white">@android:color/background_light</color>
    <dimen name="calendarPaddingLeft">8dp</dimen>
    <dimen name="calendarPaddingRight">8dp</dimen>
    <dimen name="calendarTitlePaddingBottom">8dp</dimen>
    <dimen name="calendarTitlePaddingTop">8dp</dimen>
    <dimen name="minDayCellHeight">32dp</dimen>
    <dimen name="minDayCellWidth">32dp</dimen>
    <string formatted="false" name="title_format">%s %d</string>
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <!--
            All customizations that are NOT specific to a particular
            API-level can go here.
        -->
    </style>
    <style name="CalendarView"/>
    <style name="CalendarView.DayOfTheMonth">
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">@dimen/minDayCellWidth</item>
        <item name="android:minHeight">@dimen/minDayCellHeight</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CalendarView.DayOfTheWeek">
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">@dimen/minDayCellWidth</item>
        <item name="android:minHeight">@dimen/minDayCellHeight</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CalendarView.MonthTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <declare-styleable name="CustomCalendarView">
        <attr format="color" name="calendarTitleTextColor"/>
        <attr format="color" name="dayOfWeekTextColor"/>
        <attr format="color" name="dayOfMonthTextColor"/>
        <attr format="color" name="calendarBackgroundColor"/>
        <attr format="color" name="disabledDayBackgroundColor"/>
        <attr format="color" name="disabledDayTextColor"/>
        <attr format="reference" name="selectedDayBackground"/>
        <attr format="color" name="selectedDayTextColor"/>
        <attr format="color" name="weekLayoutBackgroundColor"/>
        <attr format="color" name="titleLayoutBackgroundColor"/>
        <attr format="color" name="currentDayOfMonthColor"/>
    </declare-styleable>
</resources>